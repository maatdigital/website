<div class="container">
  <div class="space-90"></div>

  <div id="team" class="row">
    <div class="col-sm-12">
      <div class="center-title">
        <h2>MAAT Team Members</h2>
      </div>
    </div>

    <% ["tischmeyer","musialik","masciarotte","shield"].each do |member| %>
      <div class="col-lg-6 col-md-6 margin-b-30">
        <div class="feedback-box">
          <div class="margin-b-30 text-center">
            <%= image_tag data.team[member].image, alt: data.team[member].title,
                class: "rounded-circle margin-b-20" %>
              <h4 class="margin-b-5"><%= data.team[member].title %></h4>
              <p class="text-muted"><%= data.team[member].role %></p>
          </div>
          <p><%= data.team[member].text %></p>
        </div>

      </div>
    <% end %>
  </div>

  <div id="board" class="row">
    <div class="col-sm-12">
      <div class="center-title">
