<script type="text/javascript">

  $('button.verify').on('click',function(evt){
    var product = $(this).attr('data-verify');
    var license = [];

    $(this).parent().children('input').each(function(idx) {
      license.push($(this).val());
    });

    $.ajax({
    type: "POST",
      url: "<%= data.site.api.upgradecheck.url %>",
      data: {
        "product": "drm",
        "key": license.join('-')
      },
      success: function (response) {
        // $(this).blur();
        console.log(response);
      },
      dataType: "json"
    });
  });

</script>
